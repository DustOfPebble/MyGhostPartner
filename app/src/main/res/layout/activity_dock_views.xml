<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

    <com.dustofcloud.daytodayrace.PointsDrawer
        android:id="@+id/show_waypoints"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <com.dustcloud.daytodayrace.ControlSwitch
        android:id="@+id/SwitchSleepLocker"
        style="@style/ButtonCustom"
        app:picture="@drawable/icon_wifi_status"
        app:label="@string/text_wifi_status"
        app:inactive="@drawable/gradient_none"
        app:active="@drawable/gradient_blue"
        android:layout_width="180dp"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal|center_vertical"
        />

</FrameLayout>
