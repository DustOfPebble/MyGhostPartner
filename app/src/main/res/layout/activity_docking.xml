<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.dustofcloud.daytodayrace.MapManager
        android:id="@+id/map_manager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <com.dustofcloud.daytodayrace.ControlSwitch
        android:id="@+id/switch_sleep_locker"
        android:clickable="true"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="top|left"
        app:HighMode="@drawable/sleep_locked"
        app:LowMode="@drawable/sleep_unlocked"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right|top"></RelativeLayout>

</FrameLayout>
