<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.dustofcloud.daytodayrace.MapManager
        android:id="@+id/map_manager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <com.dustofcloud.daytodayrace.ControlSwitch
        android:id="@+id/switch_sleep_locker"
        android:clickable="true"
        android:layout_margin="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/switch_frame"
        app:HighMode="@drawable/sleep_locked"
        app:LowMode="@drawable/sleep_unlocked"
        />
    <com.dustofcloud.daytodayrace.ControlSwitch
        android:id="@+id/switch_light_enhancer"
        android:clickable="true"
        android:layout_margin="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/switch_sleep_locker"
        android:background="@drawable/switch_frame"
        app:HighMode="@drawable/light_max"
        app:LowMode="@drawable/light_low"
        />
    <com.dustofcloud.daytodayrace.ControlSwitch
        android:id="@+id/switch_battery_saver"
        android:clickable="true"
        android:layout_margin="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/switch_light_enhancer"
        android:background="@drawable/switch_frame"
        app:HighMode="@drawable/battery_drain"
        app:LowMode="@drawable/battery_save"
        />

    <com.dustofcloud.daytodayrace.ControlSwitch
        android:id="@+id/gps_provider"
        android:clickable="true"
        android:layout_margin="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/switch_frame"
        app:HighMode="@drawable/gps_live"
        app:LowMode="@drawable/gps_replay"
        />

    <com.dustofcloud.daytodayrace.ControlSwitch
        android:id="@+id/heartbeat_provider"
        android:clickable="true"
        android:layout_margin="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/gps_provider"
        android:background="@drawable/switch_frame"
        app:HighMode="@drawable/heartbeat_connected"
        app:LowMode="@drawable/heartbeat_disconnected"
        />

    <com.dustofcloud.daytodayrace.Monitor
        android:id="@+id/left_monitor"
        android:layout_margin="2dp"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/monitor_frame"
        android:visibility="invisible"
        />

    <com.dustofcloud.daytodayrace.Monitor
        android:id="@+id/right_monitor"
        android:layout_margin="2dp"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/monitor_frame"
        android:visibility="invisible"
        />

</RelativeLayout>
