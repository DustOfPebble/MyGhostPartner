<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/manage_docking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <core.launcher.Map.Map2D
        android:id="@+id/map_manager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <core.launcher.Buttons.ControlSwitch
        android:id="@+id/switch_sleep_locker"
        android:clickable="true"
        android:layout_margin="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/switch_frame"
        app:HighMode="@drawable/screen_locked"
        app:LowMode="@drawable/screen_unlocked"
        />
    <core.launcher.Buttons.ControlSwitch
        android:id="@+id/switch_trace_recorder"
        android:clickable="true"
        android:layout_margin="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/switch_sleep_locker"
        android:background="@drawable/switch_frame"
        app:HighMode="@drawable/logging_trace"
        app:LowMode="@drawable/logging_off"
        />

    <core.launcher.Buttons.ControlSwitch
        android:id="@+id/gps_provider"
        android:clickable="true"
        android:layout_margin="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/switch_frame"
        app:HighMode="@drawable/gps_listening"
        app:LowMode="@drawable/gps_off"
        />

    <core.launcher.Buttons.ControlSwitch
        android:id="@+id/sensor_provider"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/gps_provider"
        android:layout_margin="5dp"
        android:background="@drawable/switch_frame"
        android:clickable="true"
        app:HighMode="@drawable/sensor_active"
        app:LowMode="@drawable/sensor_off" />

    <core.launcher.Widgets.StatsScaled
        android:id="@+id/left_monitor"
        android:layout_margin="2dp"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/monitor_frame"
        android:visibility="invisible"
        />

    <core.launcher.Widgets.StatsScaled
        android:id="@+id/right_monitor"
        android:layout_margin="2dp"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/monitor_frame"
        android:visibility="invisible"
        />

</RelativeLayout>
